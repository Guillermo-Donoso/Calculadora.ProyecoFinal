<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#212121"
    tools:context=".MainActivity">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_margin="20dp"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">
    <TextView
        android:id="@+id/solucion"
        android:layout_width="380dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:background="#B2EBF2"
        android:text="                           0"
        android:textSize="50dp"
        android:textStyle="italic"
        
        />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_margin="20dp"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">

        <Button
            android:id="@+id/num_siete"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:text="7"
            android:textSize="40dp"
            android:background="#FFC107"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="italic"
            android:layout_marginLeft="5dp"
            />
        <Button
            android:id="@+id/num_ocho"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:text="8"
            android:textSize="40dp"
            android:background="#FFC107"
            android:textStyle="italic"
            android:layout_marginLeft="5dp"/>
        <Button
            android:id="@+id/num_nueve"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:text="9"
            android:textSize="40dp"
            android:background="#FFC107"
            android:textStyle="italic"
            android:layout_marginLeft="5dp"/>
        <Button
            android:id="@+id/multiplicacion"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:text="x"
            android:textSize="40dp"
            android:background="#2196F3"
            android:textStyle="italic"
            android:layout_marginLeft="5dp"/>
    </LinearLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_margin="20dp"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">
        <Button
            android:id="@+id/num_cuatro"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:text="4"
            android:textSize="40dp"
            android:background="#FFC107"
            android:textStyle="italic"
            android:layout_marginLeft="5dp"/>
        <Button
            android:id="@+id/num_cinco"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:text="5"
            android:textSize="40dp"
            android:textStyle="italic"
            android:background="#FFC107"
            android:layout_marginLeft="5dp"/>
        <Button
            android:id="@+id/num_seis"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:text="6"
            android:textSize="40dp"
            android:background="#FFC107"
            android:textStyle="italic"
            android:layout_marginLeft="5dp"/>
        <Button
            android:id="@+id/division"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:text="/"
            android:textSize="40dp"
            android:background="#2196F3"
            android:layout_marginLeft="5dp"/>
    </LinearLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_margin="20dp"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">
        <Button
            android:id="@+id/num_uno"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:text="1"
            android:textSize="40dp"
            android:background="#FFC107"
            android:textStyle="italic"
            android:layout_marginLeft="5dp"/>
        <Button
            android:id="@+id/num_dos"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:text="2"
            android:textSize="40dp"
            android:background="#FFC107"
            android:textStyle="italic"
            android:layout_marginLeft="5dp"/>
        <Button
            android:id="@+id/num_tres"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:text="3"
            android:textSize="40dp"
            android:background="#FFC107"
            android:textStyle="italic"
            android:layout_marginLeft="5dp"/>
        <Button
            android:id="@+id/sustraccion"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:text="-"
            android:textSize="40dp"
            android:background="#2196F3"
            android:textStyle="italic"
            android:layout_marginLeft="5dp"/>
    </LinearLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_margin="20dp"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">

        <Button
            android:id="@+id/num_cero"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:text="0"
            android:textSize="40dp"
            android:background="#FFC107"
            android:textStyle="italic"
            android:layout_marginLeft="5dp"/>
        <Button
            android:id="@+id/igual"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:text="="
            android:textSize="40dp"
            android:textStyle="italic"
            android:background="#FFA000"
            android:layout_marginLeft="5dp" />
        <Button
            android:id="@+id/suma"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:text="+"
            android:textSize="40dp"
            android:background="#2196F3"
            android:textStyle="italic"
            android:layout_marginLeft="5dp"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_margin="15dp"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">
        <Button
            android:id="@+id/clean"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:text="CE"
            android:textSize="40dp"
            android:background="#FFA000"
            android:textStyle="italic"
            android:layout_marginLeft="5dp"/>




    </LinearLayout>



</LinearLayout>